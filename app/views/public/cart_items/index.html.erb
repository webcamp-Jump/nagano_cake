<h3>ショッピングカート</h3>
<p></p>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td>￥<%= number_to_currency(cart_item.item.price * 1.1) %> (税込)</td>
        <td><%= cart_item.amount %></td>
        <td>￥<%= number_to_currency((cart_item.item.price * 1.1) * cart_item.amount) %> (税込)</td>
      </tr>
    <% end %>
  </tbody>
</table>