<div class="container mt-5">
 
  <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
  
  <table>
   <tr>
     <td>郵便番号(ハイフンなし)</td>
     <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control mx-5 mb-2" %></td>
     <td></td>
   </tr>
   
   <tr>
     <td>住所</td>
     <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control mx-5 mb-2" %></td>
     <td></td>
   </tr>
   
   <tr>
     <td>宛名</td>
     <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control mx-5 mb-2" %></td>
     <td><%= f.submit "新規登録", class: "btn btn-success mx-5 mb-2" %></td>
   </tr>
   
   </table>
  <% end %>

   <table class="table table-bordered">
     <thead>
      <tr>
        <th class="table-secondary w-25">郵便番号</th>
        <th class="table-secondary w-25">住所</th>
        <th class="table-secondary w-25">宛名</th>
        <th class="table-secondary w-25"></th>
      </tr>
     </thead>

    <tbody>
      <tr>
        <td>データ1-1</td>
        <td>データ1-2</td>
        <td>データ2-1</td>
        <td>
         <%#= link_to "編集する", public_address_edit_path, class: "btn btn-success" %>
         <%#= link_to "削除する", edit_address_path, class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
   </table>
</div>