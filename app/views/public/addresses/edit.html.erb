<div class="container mt-5">
 <h2>配送先一覧</h2>
  <%= form_with model: @address, url: public_address_path(@address), method: :patch do |f| %>
    <% if @address.errors.any? %>
        <div class="alert alert-danger">
          <%= @address.errors.count %>件のエラーが発生しました
          <ul class="mb-0">
            <% @address.errors.full_messages.each do |message| %>
              <li><%= message.gsub("postal_code", "郵便番号").gsub("Address", "住所").gsub("Name", "宛名") %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <table>
   <tr>
     <td>郵便番号(ハイフンなし)</td>
     <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control mx-5 mb-2" %></td>
     <td></td>
   </tr>

   <tr>
     <td>住所</td>
     <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control mx-5 mb-2" %></td>
     <td></td>
   </tr>

   <tr>
     <td>宛名</td>
     <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control mx-5 mb-2" %></td>
     <td><%= f.submit "変更内容を保存", class: "btn btn-success mx-5 mb-2" %></td>
   </tr>

   </table>
  <% end %>
</div>