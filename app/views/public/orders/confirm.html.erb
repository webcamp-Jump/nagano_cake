<table>
  <tr>
    <td>商品名</td>
    <td>単価（税込）</td>
    <td>数量</td>
    <td>小計</td>
  </tr>

  <% @cart_items.each do |cart_item| %>
    <% subtotal = cart_item.amount * cart_item.item.price %>
    <% sum += subtotal %>

    <tr>
      <td>
        <%= image_tag cart_item.item.image.variant(resize: '300x300', format: 'jpeg') %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= subtotal %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <td>送料</td>
    <td>800</td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= sum %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= sum + 800 %></td>
  </tr>
</table>

<table>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td>
      <%= @order.address %>
      <%= @order.name %>
    </td>
  </tr>
</table>

<%= form_with model: @order, url: public_orders_path, local: true do |f| %>
  <%= f.submit "注文を確定する" %>
<% end %>
