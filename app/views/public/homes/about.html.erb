     <%= link_to new_admin_session_path, class: "your-link-class" do %>
      <i class="fa-solid fa-heart"></i></p>
     <% end %>
     </div>


    <style>

    .slider {
      max-width: 100%;
      max-height: 100%;
      display: flex;
      overflow: hidden;
      margin: 0 auto;
    }

    .slider > :first-child {
      animation: scroll 30s infinite linear;
    }

    @keyframes scroll {
      0% { margin-left: 0; }
      20% { margin-left: -100%; }
      25% { margin-left: -100%; }
      45% { margin-left: -200%; }
      50% { margin-left: -200%; }
      70% { margin-left: -300%; }
      75% { margin-left: -300%; }
      95% { margin-left: -400%; }
      100% { margin-left: -400%; }
    }
  </style>
  
   <body>
     <div class="slider">
       <div class="slider-item">
         <%= image_tag 'about.jpg', style: "width: 1000px; height: 800px; background-color: red;" %>
       </div>
       
       <div class="slider-item">
         <%= image_tag '店内画像.jpg', style: "width: 1000px; height: 800px; background-color: red;" %>
       </div>
       
       <div class="slider-item">
         <%= image_tag 'ウェディングケーキ.jpg', style: "width: 1000px; height: 800px; background-color: red;" %>
       </div>
       
       <div class="slider-item">
         <%= image_tag 'かわいいケーキ.jpg', style: "width: 1000px; height: 800px; background-color: red;" %>
       </div>
  </body>








      
