<div class="container">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>

    <tbody>

        <tr>
          <td>名前</td>
          <td class="field">
            <%= f.label :last_name, "(姓)", class: "mb-2 ml-1" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "mb-2 mx-3" %>
          </td>

          <td class="field">
            <%= f.label :first_name, "(名)", class: "mb-2 ml-1" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "mb-2 mx-3" %>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td class="field">
            <%= f.label :last_name_kana, "(セイ)", class: "mb-2 ml-1" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "mb-2" %>
          </td>

          <td class="field">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>

        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td class="field">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </td>
        </tr>

        <tr>
          <td>住所</td>
          <td class="field">
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </td>
        </tr>

        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td class="field">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </td>
        </tr>

        <tr>
          <td>パスワード(6文字以上)</td>
          <td class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>

        <tr>
          <td>パスワード(確認用)</td>
          <td class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>

        <tr>
        <td>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
        </td>
        </tr>

  </tbody>
 </table>
<% end %>


<h3>既に登録済みの方</h3>
<p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>

</div>