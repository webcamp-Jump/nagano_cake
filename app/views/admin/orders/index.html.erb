<div class="col-sm-9 col-md-7 col-lg-5 px-5 px-sm-0 mx-auto align-self-center text-start" style="margin-top: 50px; margin-bottom: 50px;">
  <h2>注文履歴一覧</h2>
   <div class="d-flex justify-content-around">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
     <tbody>
  <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= link_to order_detail.order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order_detail.order) %></td>
      <td><%= order_detail.order.name %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order.status %></td>
    </tr>
  <% end %>
</tbody>

  </table>
 </div>
</div>
