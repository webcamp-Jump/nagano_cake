<div class="container">
<h3>注文履歴詳細</h3>
<div class="row">
  <div class="col-xs-6">

      <div>
        <p>
          <strong class="col-xs-2">購入者</strong>
          <%= link_to admin_customer_path(@order.customer_id) do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </p>
      </div>
      <br>
      <div>
          <p>
          <strong class="col-xs-2">配送先</strong>
          <%= (@order.customer.postal_code).to_s.insert(3, "-") %>
          <%= @order.customer.address %>
          </p>
      </div>
      <br>
      <div>
          <p>
            <strong class="col-xs-2">支払い方法</strong>
            <%= t("enums.order.payment_method.#{@order.payment_method}") %>
          </p>
      </div>
      <br>
      <div>
          <p>
            <strong class="col-xs-4">注文ステータス</strong>
            <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
              <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %>
          </p>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <table class='order-show-table table'>
      <thead>
        <tr>
          <th class="active">商品名</th>
          <th class="active">単価（税込）</th>
          <th class="active">数量</th>
          <th class="active">小計</th>
          <th class="active">製作ステータス</th>
        <tr>
      </thead>
<% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td class="col-xs-4"><%= order_detail.item.name %></td>
      <td class="col-xs-2">¥<%= (order_detail.price * 1.1).floor.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td class="col-xs-2">¥<%= ((order_detail.price * order_detail.amount * 1.1).floor).to_s(:delimited) %></td>
      <td>
        <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f| %>
          <%= f.select :making_status, OrderDetail.making_statuses.keys.map { |status| [status.humanize, status] }, selected: order_detail.making_status %>
          <%= f.submit "更新", class: 'btn btn-primary' %>
        <% end %>
      </td>
    </tr>
  </tbody>
<% end %>
    </table>
  </div>
  <div class="col-xs-4">
    <div>
      <p>
        <strong class="col-xs-3">商品合計</strong>
         ¥<%= (@order.total_payment - @order.shipping_cost).to_s(:delimited)%>
      </p>
    </div>
    <br>

    <div>
      <p>
        <strong class="col-xs-2">送料</strong>
        ¥<%= @order.shipping_cost %>
      </p>
    </div>
    <br>

    <div>
      <p>
        <strong class="col-xs-4">請求金額合計</strong>
        ¥<%= @order.total_payment.to_s(:delimited) %>
      </p>
    </div>
    <br>
  </div>
</div>
</div>