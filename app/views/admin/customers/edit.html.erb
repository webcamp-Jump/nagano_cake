<!--管理者側の会員情報編集ページ-->

<h4><%= @customer.last_name %> <%= @customer.first_name %> さんの会員情報編集</h4>

<%= form_with(model: @customer, url: admin_customer_path(@customer), local: true) do |form| %>

 <table>

      <tr>
        <th class="nowrap">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      
      <tr>
        <th class="nowrap">氏名</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'last_name', @customer.last_name, class: 'form-control' %>
            </div>
            <div class="col">
              <%= text_field_tag 'first_name', @customer.first_name, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
      
      
      <tr>
        <th class="nowrap">フリガナ</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'last_name_kana', @customer.last_name_kana, class: 'form-control' %>
            </div>
            <div class="col">
              <%= text_field_tag 'first_name_kana', @customer.first_name_kana, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
      
      
      <tr>
        <th class="nowrap">郵便番号</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'postal_code', @customer.postal_code, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
      
      <tr>
        <th class="nowrap">住所</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'address', @customer.address, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
      
      <tr>
        <th class="nowrap">電話番号</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'telephone_number',@customer.telephone_number, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
    
      <tr>
        <th class="nowrap">電話番号</th>
        <td>
          <div class="row g-3">
            <div class="col">
              <%= text_field_tag 'email', @customer.email, class: 'form-control' %>
            </div>
          </div>
        </td>
      </tr>
      
      
    <tr>
      <td>会員ステータス</td>
  　　<td>
        <%= form.radio_button :is_active, true, id: "customer_is_active_true" %>
        <%= form.label :is_active, "有効", value: true, for: "customer_is_active_true" %>

        <%= form.radio_button :is_active, false, id: "customer_is_active_false" %>
        <%= form.label :is_active, "退会", value: false, for: "customer_is_active_false" %>
      </td>
    </tr>
    
    <tr>
      <td></td>
      <td>
        <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="Update Book">
      </td>
    </tr>
            
　</table>
<% end %>
