<div class="col-sm-11 col-md-9 col-lg-6 px-5 px-sm-0 mx-auto align-self-center text-start justify-content-center" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-4">管理者ログイン</h2>
      <p class="mt-4"></p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group d-flex align-items-center mt-4">
          <div class="col-md-4">
            <%= f.label :メールアドレス, class: "mr-2" %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex align-items-center mt-4">
         <div class="col-md-4">
           <%= f.label :password, "パスワード", class: "mr-2" %>
         </div>
         <div class="col-md-8">
           <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
         </div>
        </div>

        <div class="form-group d-flex align-items-center mt-2">
         <div class="col-md-4"></div>
          <div class="col-md-8">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block w-75" %>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>