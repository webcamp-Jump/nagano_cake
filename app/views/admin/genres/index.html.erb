<div class="container">
  <div class="row justify-content-center mt-5 mb-5">
    <div class="col-sm-9 col-md-7 col-lg-5 px-0">
      <h3 class="text-center mb-4">ジャンル一覧・追加</h3>

      <% if @genre.errors.any? %>
        <div class="alert alert-danger">
          <%= @genre.errors.count %>件のエラーが発生しました
          <ul class="mb-0">
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message.gsub("Genre", "ジャンル").gsub("Price", "価格").gsub("Name", "ジャンル").gsub("Image", "商品画像").gsub("Introduction", "商品説明") %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with url: admin_genres_path, model: @genre, class: "mb-4" do |g| %>
        <div class="form-group">
          <%= g.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
        </div>
        <%= g.submit '新規登録', class: "btn btn-success btn-block" %>
      <% end %>

      <div>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |ge| %>
              <tr>
                <td><%= ge.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(ge), class: "btn btn-outline-primary btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
