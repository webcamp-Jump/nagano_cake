<!--管理者側の商品一覧ページ-->

<h2>商品一覧</h2>

<%= link_to  new_admin_item_path do %>
  新規登録
<% end %>

<div>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do|item| %>
      <tr>
        <td>
        <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item) do %>
          <%= item.name %>
          <% end %>
        </td>
        <td>
        <%= item.price %>
        </td>
        <td>
        <%= item.genre_id %>
        </td>
        <td>
        <%= item.is_active %>
        </td>
      </tr>





    <% end %>
  </tbody>
</table>
</div>