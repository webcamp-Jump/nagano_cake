<!--管理者側の商品一覧ページ-->
<div class='container px-5 px-sm-0'>
<div class="d-flex justify-content-around">
<h2>商品一覧</h2>
<%= link_to  new_admin_item_path, class: "btn btn-transparent"  do %>
  <i class="fa-solid fa-plus"></i>
<% end %>
</div>
<div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do|item| %>
      <tr>
        <td>
        <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item) do %>
          <%= item.name %>
          <% end %>
        </td>
        <td>
        <%= item.price %>
        </td>
        <td>
        <%= item.genre.name %>
        </td>
        <td>
        <% if item.is_active %>
        <span class='text-success'>販売中</span>
        <% else %>
        <span class='text-secondary'>販売停止</span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

