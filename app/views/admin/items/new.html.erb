<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>商品新規登録</h2>
<!-- form_with部分 -->
<%= form_with url: admin_items_path, model: @item do |f| %>
  <div class="form-group">
  <a>商品画像</a>
  <%= f.file_field :image, accept: "image/*" %>
</div>
  <div class="form-group">
  <p>商品名</p>
  <%= f.text_field :name, class: 'form-control book_title' %>
</div>
  <div class="form-group">
  <p>商品説明</p>
  <%= f.text_area :introduction, class: 'form-control book_title' %>
</div>
  <div class="form-group">
	<p>ジャンル</p>
	<%= f.select :genre_id, options_for_select(@genres.map { |genre| [genre.name, genre.id] }) %>
</div>
  <div class="form-group">
	<p>税抜価格</p>
	<%= f.text_field :price, class: 'form-control book_title' %>
</div>
  <div class="form-group">
  <p>販売ステータス</p>
<p>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, true, {checked: @item.is_active} %>

  <%= f.label :is_active, "販売停止中" %>
  <%= f.radio_button :is_active, false, {checked: !@item.is_active} %>
</p>
</div>
  <%= f.submit '新規登録' %>
<% end %>
</div>
</div>
</div>